import tkinter as tk                 # підключаємо бібліотеку tkinter

window = tk.Tk()                     # створюємо головне вікно програми

window.title("Нагадування")          # задаємо назву вікна
window.geometry("300x200")           # задаємо розмір вікна

screen_width = window.winfo_screenwidth()  # отримуємо ширину екрана
x = screen_width - 300               # обчислюємо X (правий край екрана)
y = 0                                # Y = 0 (верх екрана)
window.geometry(f"300x200+{x}+{y}")  # розміщуємо вікно у правому верхньому куті

window.configure(bg="#91c0b2")        # змінюємо колір фону вікна
window.attributes("-alpha", 0.55)    # робимо вікно напівпрозорим

window.resizable(False, False)       # забороняємо зміну розміру вікна
window.attributes("-topmost", True)  # вікно завжди поверх інших

# ---------- ПОЛЕ ДЛЯ ТЕКСТУ ----------
text = tk.Text(                      # створюємо поле для введення тексту
    window,
    width=32,                        # ширина поля
    height=7,                        # висота поля
    font=("Arial", 12)               # шрифт тексту
)
text.pack(pady=10)                   # показуємо поле у вікні

# ---------- ФУНКЦІЯ ----------
def close_reminder():                # функція для закриття нагадування
    window.destroy()                 # закриває вікно програми

# ---------- КНОПКА ----------
button = tk.Button(                  # створюємо кнопку
    window,
    text="Вимкнути нагадування",     # текст кнопки
    command=close_reminder           # дія при натисканні кнопки
)
button.pack(pady=5)                  # показуємо кнопку у вікні

# ---------- ЗАВДАННЯ №2 ----------
# 1) Зміни назву вікна на "Моє нагадування"
# 2) Зміни колір фону вікна
# 3) Зміни текст кнопки
# 4) Зміни розмір вікна (geometry)
# 5) Зміни прозорість вікна (alpha)
# ⭐ 6) Зроби кнопку іншого кольору (bg, fg)
# ⭐⭐ 7) Додай ще одну кнопку "Очистити", яка очищає текстове поле

window.mainloop()                    # запускаємо програму
