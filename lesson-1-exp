from tkinter import *              # підключаємо бібліотеку tkinter

root = Tk()                        # створюємо головне вікно програми
root.title("Tkinter приклад")      # задаємо назву вікна
root.geometry("400x300")           # задаємо розмір вікна

# ---------- НАПИС ----------
lab = Label(
    root,
    text="Введи число і натисни кнопку",  # текст напису
    font="Arial 12",                      # шрифт і розмір
    bg="lightblue",                       # колір фону
    fg="black"                            # колір тексту
)
lab.pack(pady=10)                 # показуємо напис у вікні

# ---------- ПОЛЕ ВВЕДЕННЯ ----------
entry = Entry(root, width=20)     # поле для введення тексту
entry.pack()                      # показуємо поле
entry.focus_set()                 # курсор одразу в полі

# ---------- ФУНКЦІЯ (ОБРОБНИК ПОДІЇ) ----------
def click():                      # функція виконується при натисканні кнопки
    text = entry.get()            # зчитуємо текст з поля
    lab.config(text="Ти ввів: " + text)  # змінюємо текст напису
    entry.delete(0, END)          # очищаємо поле введення

# ---------- КНОПКА ----------
btn = Button(
    root,
    text="OK",                    # текст на кнопці
    width=10,                     # ширина кнопки
    command=click                 # дія при натисканні кнопки
)
btn.pack(pady=10)                 # показуємо кнопку

root.mainloop()                   # запускаємо програму
