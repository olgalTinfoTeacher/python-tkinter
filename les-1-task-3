import tkinter as tk                 # –ø—ñ–¥–∫–ª—é—á–∞—î–º–æ –±—ñ–±–ª—ñ–æ—Ç–µ–∫—É tkinter

window = tk.Tk()                     # —Å—Ç–≤–æ—Ä—é—î–º–æ –≥–æ–ª–æ–≤–Ω–µ –≤—ñ–∫–Ω–æ
window.title("–ó–∞–≤–¥–∞–Ω–Ω—è 3")           # –Ω–∞–∑–≤–∞ –≤—ñ–∫–Ω–∞
window.geometry("300x200")           # —Ä–æ–∑–º—ñ—Ä –≤—ñ–∫–Ω–∞

# ---------- –ù–ê–ü–ò–° ----------
lab = tk.Label(
    window,
    text="–ù–∞–≤–µ–¥–∏ –º–∏—à–∫—É –Ω–∞ –∫–Ω–æ–ø–∫—É",   # –ø–æ—á–∞—Ç–∫–æ–≤–∏–π —Ç–µ–∫—Å—Ç
    font=("Arial", 12)
)
lab.pack(pady=15)                    # –ø–æ–∫–∞–∑—É—î–º–æ –Ω–∞–ø–∏—Å

# ---------- –û–ë–†–û–ë–ù–ò–ö–ò –ü–û–î–Ü–ô ----------
def mouse_enter(event):              # —Å–ø—Ä–∞—Ü—å–æ–≤—É—î, –∫–æ–ª–∏ –º–∏—à–∫–∞ –ù–ê–î –∫–Ω–æ–ø–∫–æ—é
    lab.config(text="–ú–∏—à–∫–∞ –Ω–∞ –∫–Ω–æ–ø—Ü—ñ üôÇ")

def mouse_leave(event):              # —Å–ø—Ä–∞—Ü—å–æ–≤—É—î, –∫–æ–ª–∏ –º–∏—à–∫–∞ –ü–Ü–®–õ–ê –∑ –∫–Ω–æ–ø–∫–∏
    lab.config(text="–ú–∏—à–∫–∞ –Ω–µ –Ω–∞ –∫–Ω–æ–ø—Ü—ñ üôÉ")

# ---------- –ö–ù–û–ü–ö–ê ----------
btn = tk.Button(
    window,
    text="–ö–Ω–æ–ø–∫–∞"
)
btn.pack(pady=10)                    # –ø–æ–∫–∞–∑—É—î–º–æ –∫–Ω–æ–ø–∫—É

# ---------- –ü–†–ò–í‚Äô–Ø–ó–ö–ê –ü–û–î–Ü–ô ----------
btn.bind("<Enter>", mouse_enter)     # –ø–æ–¥—ñ—è: –Ω–∞–≤–µ–¥–µ–Ω–Ω—è –º–∏—à—ñ –Ω–∞ –∫–Ω–æ–ø–∫—É
btn.bind("<Leave>", mouse_leave)     # –ø–æ–¥—ñ—è: –≤—ñ–¥–≤–µ–¥–µ–Ω–Ω—è –º–∏—à—ñ –∑ –∫–Ω–æ–ø–∫–∏

# ---------- –ó–ê–í–î–ê–ù–ù–Ø ‚Ññ3 ----------
# 1) –ó–º—ñ–Ω–∏ —Ç–µ–∫—Å—Ç –Ω–∞–ø–∏—Å—É
# 2) –ó–º—ñ–Ω–∏ —Ç–µ–∫—Å—Ç –∫–Ω–æ–ø–∫–∏
# 3) –ó–º—ñ–Ω–∏ —Ä–æ–∑–º—ñ—Ä –≤—ñ–∫–Ω–∞
# 4) –ó—Ä–æ–±–∏, —â–æ–± –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–Ω—ñ –º—ñ–Ω—è–≤—Å—è –∫–æ–ª—ñ—Ä —Ç–µ–∫—Å—Ç—É –Ω–∞–ø–∏—Å—É
# ‚≠ê 5) –î–æ–¥–∞–π –ø–æ–¥—ñ—é <Button-1> (–∫–ª—ñ–∫ –º–∏—à–∫–æ—é)
# ‚≠ê‚≠ê 6) –ó—Ä–æ–±–∏, —â–æ–± –∫–Ω–æ–ø–∫–∞ –∑–º—ñ–Ω—é–≤–∞–ª–∞ –∫–æ–ª—ñ—Ä –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–Ω—ñ

window.mainloop()                    # –∑–∞–ø—É—Å–∫–∞—î–º–æ –ø—Ä–æ–≥—Ä–∞–º—É
