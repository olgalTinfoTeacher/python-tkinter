from tkinter import *          # підключаємо бібліотеку tkinter для створення вікон

def click():                   # функція, яка виконується при натисканні кнопки
    lab.config(text="Молодець!")  # змінює текст напису

root = Tk()                    # створюємо головне вікно програми
root.title("Tkinter")          # задаємо назву вікна
root.geometry("300x200")       # задаємо розмір вікна

lab = Label(                   # створюємо напис
    root,
    text="Натисни кнопку",     # початковий текст напису
    font="Arial 14"            # шрифт і розмір тексту
)
lab.pack(pady=10)              # показуємо напис у вікні з відступом зверху і знизу

btn = Button(                  # створюємо кнопку
    root,
    text="OK",                 # текст на кнопці
    command=click              # дія при натисканні кнопки
)
btn.pack()                     # показуємо кнопку у вікні

# ---------- ЗАВДАННЯ ДЛЯ УЧНІВ ----------
# 1) Зміни текст кнопки "OK" на "Натисни мене"
# 2) Зміни текст напису на будь-який свій
# 3) Зміни розмір вікна (geometry)
# 4) Зміни колір тексту напису (fg)
# 5) Зроби так, щоб при натисканні кнопки змінювався колір фону напису (bg)

root.mainloop()                # запускаємо програму і чекаємо дій користувача
